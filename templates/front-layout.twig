{% extends 'base.html.twig' %}

{% block body %}
<header>
  <div class="navbar navbar-light bg-light navbar-expand-lg">
    <div class="container">
      <div>
        <span class="d-inline">
          <i id="pizza-icon" class="fas fa-pizza-slice fa-3x pizza-icon"></i>
        </span>
        <span class="text-primary d-inline fs-2">Pizzerio's</span>
      </div>
      <div>
        <div class="d-flex justify-content-between">>
        {{ knp_menu_render('main') }}
        <span style="background-color: white; border-radius: 5px; padding: 1px;">{{ knp_menu_render('user', {style: 'horizontal'}) }}</span>
        </div>
    </div>
  </div>
</header>

<main>
  <div class="container">
    {% block content %}{% endblock %}
  </div>
</main>
{% endblock %}
